FROM gradle:7.3.1-jdk17-alpine AS build

# Directorio de trabajo
WORKDIR /app

# Copia los archivos build.gradle y src
COPY build.gradle.kts .
COPY gradlew .
COPY gradle gradle
COPY src src

# Compila y construye el proyecto, evitando la ejecuci贸n de los tests
RUN ./gradlew build -x test

# Etapa de ejecuci贸n
FROM openjdk:17-jdk AS run

# Directorio de trabajo
WORKDIR /app

# Copia el archivo .jar de la etapa de compilaci贸n
COPY --from=build /app/build/libs/client.jar /app/client.jar

# Define el comando para ejecutar tu aplicaci贸n
ENTRYPOINT ["java","-jar","client.jar"]